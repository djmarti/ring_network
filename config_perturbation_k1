# Output files
# ------------
# Name of the file containing  information about inputs
# (can be overridden with the option -x)
extinputs_file = "inputs"
# The prefix used in files storing firing activity. They
# are normally appended a suffix according to the layer and the
# frame, as well as an extension specifying the filetype.
output_file = "rates"
# Whether to normalize the output according to the dynamic range
# in the trial
normalize = 1

# Negative feedback parameters
# ----------------------------

# adaptation factor
J_A = 0.0

# adaptation timescale
tau_A = 10

# Turn off 
facilitation = 0
depression = 0

# Simulation parameters
# ---------------------

# Time step for Euler method
dt = 2e-3

# Total simulated time (time units)
T = 100

# Parameters sigmoid
# ------------------

# Number of neurons (1D)
N = 256

# Size of neuron grid (2D)
#N1 = 256
#N2 = 1

# Number of layers
N_layers = 1

# Maximum rate
max_rate = 1.0

# Temperature parameter
beta = 3.0

# Bias / soft threshold
sigm_thr = 1.0


# Connectivity parameters
# -----------------------

# Recurrent connections
#
# coefficient excitatory profile
J_rec_E = 5.0 

# coefficient inhibitory profile
J_rec_I = 5.0 

# concentration parameter exc. profile 500
m_rec_E = 2.5

# concentration parameter inh. profile
m_rec_I = 0


# Feedforward connections
#
# coefficient excitatory profile
J_ff_E = 5.0 

# coefficient inhibitory profile
J_ff_I = 0.2 

# concentration parameter exc. profile 500
m_ff_E = 10

# concentration parameter inh. profile
m_ff_I = 1
